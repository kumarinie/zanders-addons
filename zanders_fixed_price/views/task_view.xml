<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task -->
        <record id="view_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="submit" type="object" string="Submit" states="draft" groups="project.group_project_manager"/>
                        <button name="approved" type="object" string="Approve" states="to_be_approved" groups="zanders_fixed_price.group_project_director"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,to_be_approved,split_accepted"/>
                    </header>
                </xpath>
                <field name="partner_id" position="attributes">
                    <attribute name="domain">[('is_company','=',True)]</attribute>
                </field>
                <field name="user_id" position="after">
                    <field name="invoice_principle"/>
                    <field name="fixed_price_amount"/>
                </field>
                <xpath expr="//page[@name='users']/group/field[@name='task_user_ids']/tree/field[@name='fee_rate']"
                       position="after" >
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="allocated_percentage"/>
                </xpath>
            </field>
        </record>

        <record id="view_task_user_tree" model="ir.ui.view">
            <field name="name">task.user.tree</field>
            <field name="model">task.user</field>
            <field name="inherit_id" ref="magnus_invoicing.view_task_user_tree"/>
            <field name="arch" type="xml">
                    <field name="user_id"/>
                    <field name="product_id"/>
                    <field name="fee_rate" position="after">
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="allocated_percentage"/>
                    </field>
            </field>
        </record>


         <record id="edit_project_zander" model="ir.ui.view">
                <field name="name">project.project.form</field>
                <field name="model">project.project</field>
                <field name="inherit_id" ref="project.edit_project"/>
                <field name="arch" type="xml">
                    <xpath expr="//sheet" position="before">
                        <header>
                            <button name="submit" type="object" string="Submit" states="draft" groups="project.group_project_manager"/>
                            <button name="approved" type="object" string="Approve" states="to_be_approved" groups="zanders_fixed_price.group_project_controller"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,to_be_approved,approved"/>
                        </header>
                    </xpath>
                </field>
         </record>

</odoo>