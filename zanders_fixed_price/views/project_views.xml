<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- Project -->
      <record id="edit_project_zander" model="ir.ui.view">
                <field name="name">project.project.form</field>
                <field name="model">project.project</field>
                <field name="inherit_id" ref="project.edit_project"/>
                <field name="arch" type="xml">
                    <xpath expr="//sheet" position="before">
                        <header>
                            <button name="submit" type="object" string="Submit" states="draft" groups="project.group_project_manager"/>
                            <button name="approved" type="object" string="Approve" states="to_be_approved" groups="zanders_fixed_price.group_project_controller"/>
                            <button name="split_accepted" type="object" string="Split Accepted" states="approved" groups="zanders_fixed_price.group_project_director"/>
                            <field name="state" widget="statusbar" statusbar_visible="draft,to_be_approved,approved,split_accepted"/>
                        </header>
                    </xpath>
                    <xpath expr="//notebook/page[@name='settings']"
                       position="after">
                        <page name="rev_split_lines" string="Revenue Split Lines">
                            <field name="rev_split_lines" context="{'default_project_id':active_id}">
                                <tree string="Revenue Split Lines" create="true"
                                      edit="true" delete="true" copy="false" editable="top">
                                    <field name="user_id" />
                                    <field name="allocated_percentage" />
                                </tree>
                            </field>
                        </page>
                    </xpath>
                </field>
         </record>
</odoo>